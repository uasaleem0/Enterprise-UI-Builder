#!/usr/bin/env node

/**
 * Meta-Analyst Log Command (alias for meta-silent-log)
 * Usage: meta-log "issue description"
 */

// Simply forward to meta-silent-log
const silentLog = require('./meta-silent-log');
const args = process.argv.slice(2);

if (require.main === module) {
  if (args.length === 0) {
    console.log('\x1b[33mUsage: meta-log "issue description"\x1b[0m');
    console.log('\x1b[36mExample: meta-log "iterative protocol needs better error reporting"\x1b[0m');
    process.exit(1);
  }

  const issue = args.join(' ');
  silentLog.logIssue(issue);
}